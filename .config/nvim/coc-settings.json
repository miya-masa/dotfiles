{
  "coc.preferences.enableMarkdown": true,
  "coc.preferences.jumpCommand": "split",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.reveal.auto": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "python.venvPath": "./.env",
  "python.pythonPath": "./.env/bin/python3",
  "pyright.organizeimports.provider": "isort",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "~/.local/bin/autopep8",
  "go.goplsOptions": {
    "buildFlags": [
      "-tags=integration"
    ],
    "completeUnimported": true,
    "usePlaceholders": true,
    "gofumpt": true,
    "analyses": {
      "fillreturns": true,
      "fillstruct": true,
      "simplifyrange": true,
      "tests": true,
      "bools": true,
      "structtag": true
    }
  },
  "go.tests": {
    "generateFlags": [
      "-template",
      "testify"
    ]
  },
  "suggest.timeout": 5000,
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "command": [
          "golangci-lint",
          "run",
          "--out-format",
          "json"
        ]
      }
    }
  }
}
