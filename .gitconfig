[color]
	ui = auto

[grep]
	lineNumber = true

[diff]
	renames = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[ghq]
	root = ~/.ghq
	root = ~/go/src

[core]
	editor = nvim
	hooksPath = ~/.config/git/hooks
[push]
	default = current
[pull]
	rebase = false
[user]
	useConfigOnly = true
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
[mergetool]
	keepBackup = false
[alias]
	ignore = "!curl -L -s https://www.gitignore.io/api/$@"
[fetch]
	prune = true
